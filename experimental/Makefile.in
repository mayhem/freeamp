LDFLAGS = @LDFLAGS@
X_CFLAGS = @X_CFLAGS@
X_LIBS = @X_LIBS@ -lX11 -lXext @XPMLIB@
X_EXTRA_LIBS = @X_EXTRA_LIBS@
X_PRE_LIBS = @X_PRE_LIBS@

FREEAMPOBJ =  base/src/hashtable.o base/src/log.o base/src/player.o
FREEAMPOBJ += base/src/playlist.o base/src/propimpl.o base/src/registrar.o
FREEAMPOBJ += base/src/registry.o base/src/thread.o io/src/eventbuffer.o
FREEAMPOBJ += base/src/prefixprefs.o base/src/preferences.o
FREEAMPOBJ += io/src/pmiregistry.o io/src/pmoregistry.o
FREEAMPOBJ += io/src/pullbuffer.o io/src/streambuffer.o
FREEAMPOBJ += lmc/src/lmcregistry.o ui/src/uiregistry.o
FREEAMPOBJ += $(OSDEPOBJ)

COMPILE = $(CC) $(DEFS) $(INCLUDES) $(CFLAGS)
CXXCOMPILE = $(CXX) $(DEFS) $(INCLUDES) $(CFLAGS) $(CPPFLAGS) $(CXXFLAGS)

CXXLINK = $(CXXLD) $(CXXFLAGS) $(LDFLAGS) -o $@

#include @top_srcdir@/config/Makefile.header

all: freeamp plugins

freeamp: $(FREEAMPOBJ) $(freeamp_DEPENDENCIES)
	@rm -f freeamp
	$(CXXLINK) $(FREEAMPOBJ) $(LDFLAGS) -ldl -lpthread $(X_LIBS) $(X_EXTRA_LIBS)

.SUFFIXES: .S .c .cpp .o .s .asm .asm1


.cpp.o:
	$(CXXCOMPILE) $(FPIC) -c $< -o $@

.c.o:
	$(COMPILE) $(FPIC) -c $< -o $@

.asm.asm1:
	$(PERL) -pe 's/\b_//g' $< > $@

.asm1.:
	$(NASM) -f elf -o $@ $<

.s.o:
	$(COMPILE) -c $< -o $@

.S.o:
	$(COMPILE) -c $< -o $@


#@SET_MAKE@
clean: freeamp-clean plugins-clean

clean-freeamp: freeamp-clean
freeamp-clean:
	-rm -f $(FREEAMPOBJ) freeamp

clean-plugins: plugins-clean
plugins-clean:
	-rm -f $(LFIOBJ) $(HTTPOBJ) $(SCPMOOBJ) $(CMDUIOBJ) $(LCDUIOBJ) $(IRMANUIOBJ) $(FREEAMPUIOBJ) $(XINGLMCOBJ) plugins/*.*

distclean: clean
	-rm -f config.status Makefile config.cache

install: install-freeamp install-plugins

install-exec-local: install_plugins

uninstall-local: uninstall_plugins

plugins-install install_plugins: install-plugins

install-freeamp: freeamp
	$(mkinstalldirs) $(DESTDIR)$(bindir)
	$(INSTALL_PROGRAM) freeamp $(DESTDIR)$(bindir)

install-plugins: plugins
	$(mkinstalldirs) $(DESTDIR)$(libdir)/freeamp/plugins
	@list=`ls plugins/*.*`; for p in $$list; do \
	  if test -f $$p; then \
	    echo "  $(INSTALL_PROGRAM) $$p $(DESTDIR)$(libdir)/freeamp/`echo $$p|sed '$(transform)'`"; \
	     $(INSTALL_PROGRAM) $$p $(DESTDIR)$(libdir)/freeamp/`echo $$p|sed '$(transform)'`; \
	  else :; fi; \
	done

uninstall_plugins uninstall-plugins:
	@list=`ls plugins/*.*`; for p in $$list; do \
	  if test -f $(DESTDIR)$(libdir)/freeamp/$$p; then \
	    echo "  rm -f $(DESTDIR)$(libdir)/freeamp/`echo $$p|sed '$(transform)'`"; \
	    rm -f $(DESTDIR)$(libdir)/freeamp/`echo $$p|sed '$(transform)'`; \
	  else :; fi; \
	done

OSDEPPLUGINS = @OSDEPPLUGINS@

PLUGINS =  plugins/localfileinput-$(HOST_OS).pmi
PLUGINS += plugins/httpinput-$(HOST_OS).pmi
PLUGINS += plugins/obsinput-$(HOST_OS).pmi
PLUGINS += plugins/soundcard-$(HOST_OS).pmo
PLUGINS += plugins/freeampcmd-$(HOST_OS).ui
PLUGINS += plugins/mpg123-$(HOST_OS).ui
PLUGINS += plugins/lcd-$(HOST_OS).ui
PLUGINS += plugins/irman-$(HOST_OS).ui
PLUGINS += plugins/xingmp3-$(HOST_OS).lmc

plugins: $(PLUGINS) $(OSDEPPLUGINS)

